<h1>Perfil</h1>
<section class="vh-10">
  <div class="container h-50">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-md-12 col-xl-4">

        <div class="card" style="border-radius: 15px;">
          <div class="card-body text-center">
            <div class="mt-3 mb-4">
              <img
                src="/public/imgUser/userNone.jpg"
                class="rounded-circle img-fluid"
                style="width: 100px;"
              />
            </div>
            <h4 class="mb-2">{{user.username}}</h4>
            <p class="text-muted mb-4">{{user.email}}<span class="mx-2">|</span>

              {{#if (eq role "1")}} Admin {{else}} User {{/if}}</p>
            <p class="text-muted mb-1">ID: {{user.id}}</p>
            <div class="mb-4 pb-2">
              <button
                type="button"
                data-mdb-button-init
                data-mdb-ripple-init
                class="btn btn-outline-primary btn-floating"
              >
                <i class="fab fa-facebook-f fa-lg"></i>
              </button>
              <button
                type="button"
                data-mdb-button-init
                data-mdb-ripple-init
                class="btn btn-outline-primary btn-floating"
              >
                <i class="fab fa-twitter fa-lg"></i>
              </button>
              <button
                type="button"
                data-mdb-button-init
                data-mdb-ripple-init
                class="btn btn-outline-primary btn-floating"
              >
                <i class="fab fa-skype fa-lg"></i>
              </button>
            </div>
            <button
              type="button"
              data-mdb-button-init
              data-mdb-ripple-init
              class="btn btn-primary btn-rounded btn-lg"
            >
              Modificar
            </button>

          </div>
        </div>

      </div>
    </div>
  </div>
</section>