<h2>Listadow de productos</h2>
<section class="d-flex flex-wrap justify-content-evenly">
  {{#each data}}

    <div class="card my-2" style="width: 18rem;">
      <img
        src="public/imgProducts/{{this.thumbnails}}"
        class="card-img-top"
        alt="{{this.title}}"
      />
      <div class="card-body">
        <h5 class="card-title">{{this.title}}</h5>
        <p class="card-text">{{this.description}}</p>
        <a href="/products/{{this.id}}" class="btn btn-primary">Info</a>
      </div>
    </div>
  {{/each}}
</section>